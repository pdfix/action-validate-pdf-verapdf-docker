{
    "name": "PDF Validation veraPDF",
    "version": "v0.0.0",
    "actions": [
        {
            "title": "Validation Report in HTML (veraPDF)",
            "name": "pdfix_generate_pdf_validation_report_to_html_verapdf",
            "desc": "Generate a PDF validation report in HTML format [Local]",
            "version": "v0.0.0",
            "icon": "verapdf",
            "category": "Validation",
            "local": true,
            "returnCodes": [
                0,
                1
            ],
            "program": "docker run -v \"${working_directory}:/data\" --rm pdfix/validate-pdf-verapdf:latest validate --flavour \"${flavour}\" --profile \"/data/${profile}\" --format html --maxfailures \"${max_failures}\" --maxfailuresdisplayed \"${max_failures_displayed}\" --pass \"${pass}\" --input \"/data/${input_pdf}\" --output \"/data/${output_html}\"",
            "args": [
                {
                    "title": "Validation Profile",
                    "name": "profile",
                    "desc": "Path to profile configuration file.",
                    "ext": "xml",
                    "type": "file_path",
                    "value": ""
                },
                {
                    "title": "Validation flavour name",
                    "name": "flavour",
                    "desc": "Flavour name",
                    "type": "string",
                    "value": "ua1",
                    "set": [
                        {
                            "desc": "Automatic",
                            "value": "0"
                        },
                        {
                            "desc": "PDF/A-1A",
                            "value": "1a"
                        },
                        {
                            "desc": "PDF/A-1B",
                            "value": "1b"
                        },
                        {
                            "desc": "PDF/A-2A",
                            "value": "2a"
                        },
                        {
                            "desc": "PDF/A-2B",
                            "value": "2b"
                        },
                        {
                            "desc": "PDF/A-2U",
                            "value": "2u"
                        },
                        {
                            "desc": "PDF/A-3A",
                            "value": "3a"
                        },
                        {
                            "desc": "PDF/A-3B",
                            "value": "3b"
                        },
                        {
                            "desc": "PDF/A-3U",
                            "value": "3u"
                        },
                        {
                            "desc": "PDF/A-4",
                            "value": "4"
                        },
                        {
                            "desc": "PDF/A-4E",
                            "value": "4e"
                        },
                        {
                            "desc": "PDF/A-4F",
                            "value": "4f"
                        },
                        {
                            "desc": "PDF/UA-1",
                            "value": "ua1"
                        },
                        {
                            "desc": "PDF/UA-2",
                            "value": "ua2"
                        }
                    ]
                },
                {
                    "name": "input_pdf",
                    "desc": "Path to PDF document you want to proccess",
                    "flags": 2,
                    "ext": "pdf",
                    "type": "file_path",
                    "value": ""
                },
                {
                    "name": "output_html",
                    "desc": "Path to validation report output",
                    "flags": 4,
                    "ext": "html",
                    "type": "file_path",
                    "value": ""
                },
                {
                    "title": "Show successful checks",
                    "name": "pass",
                    "desc": "Successful checks will be displayed in output",
                    "type": "bool",
                    "value": true
                },
                {
                    "title": "Maximum failures",
                    "name": "max_failures",
                    "desc": "How many failed checks to perform. For -1 for unlimited.",
                    "type": "int",
                    "value": "-1"
                },
                {
                    "title": "Maximum failures displayed",
                    "name": "max_failures_displayed",
                    "desc": "How many failed checks per rule to show. For -1 for unlimited.",
                    "type": "int",
                    "value": "-1"
                }
            ],
            "errors": {
                "10": "Failed to parse arguments. Please check the usage and try again.",
                "11": "Input file does not exists.",
                "12": "Input file must be PDF document.",
                "13": "Input file must be PDF document and output file must be XML.",
                "14": "Input file must be PDF document and output file must be HTML.",
                "30": "Validation failed."
            }
        },
